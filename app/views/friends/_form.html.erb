<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class: 'form-control mb-2', placeholder: 'First Name' %>
  </div>

  <div class="field form-group">
    <%= form.text_field :last_name, class: 'form-control mb-2', placeholder: 'Last Name' %>
  </div>

  <div class="field form-group">
    <%= form.text_field :email, class: 'form-control mb-2', placeholder: 'Email' %>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone, class: 'form-control mb-2', placeholder: 'Phone'  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :twitter, class: 'form-control mb-2', placeholder: 'Twitter'  %>
  </div>
  <div class="field form-group">
    <%= form.number_field :user_id, id: :friend_user_id, class: 'form-control mb-2', value: current_user.id, type: 'hidden'  %>
  </div>
  <br><br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
