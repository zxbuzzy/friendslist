
<% if user_signed_in? %>
  <table class="table table-primary table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if current_user == friend.user %>
          <tr>
            <td>
            <%= link_to "#{friend.first_name} #{friend.last_name}", friend %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td> 
          </tr> 
        <% end %>
      <% end %>
    </tbody>
  </table>
<br>
<%= link_to 'New Friend', new_friend_path,class: "btn btn-primary" %>
<% else %>
  <h1>Hello world!</h1>
<% end %>